<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        #table {
            margin: auto;
            width: 400px;
        }
    </style>
    <title>Courses</title>
</head>
<body>
    <div>
        <%- include('navbar') %> 
    </div>
    <center>
        <h1><%= user.full_name %> Courses</h1>
        <form action="/students/<%= user.id %> " method="POST">
            <div>
                <label for="course">Select Course to Add</label><br>
                <select name="courseId">
                    <% courses.forEach(el => { %>
                        <option value="<%= el.id %>"><%= el.course_name %></option> <br>
                    <% }) %> 
                </select>
            </div>
            <div>
                <br><button type="submit">Add</button>
            </div>
        </form>
    </center>
    <br><br>
    <table id="table" border="1">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Lecturer</th>
                <th>Score</th>
                <th>Location</th>
            </tr>
        </thead>
        <% user.Courses.forEach(el => { %>
            <tbody>
                <tr>
                    <td><%= el.course_name %></td>
                    <td><%= el.lecturer_name %></td>
                    <th><%= el.score %> </th>
                    <td><%= el.location %> </td>
                </tr>
            </tbody>
        <% }) %> 
    </table>
</body>
</html>